<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color:#98b4d4" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sarthak.AddResourcesController">
    <content>
        <ListView style="-fx-background-color:#ff9999" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <GridPane alignment="CENTER" hgap="10" style="-fx-background-color:#98b4d4" vgap="1">
                <VBox spacing="15.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Enter Post Name:">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                  <VBox.margin>
                     <Insets top="40.0" />
                  </VBox.margin>
                    </Label>
                    <Label text="Enter Village Name:">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </Label>
                    <Label text="Enter Nearest Police Station Name:">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </Label>
                    <Label text="Enter Nearest Police Station Contact Number:">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </Label>
                    <Label text="Enter Women's Helpline Number:">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </Label>
                    <CheckBox fx:id="c1" onMouseClicked="#onChickAbleDisable" text="Play School ?">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </CheckBox>
                    <CheckBox fx:id="c2" onMouseClicked="#onChickAbleDisable" text="Primary School ?">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </CheckBox>
                    <CheckBox fx:id="c3" onMouseClicked="#onChickAbleDisable" text="High School ?">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </CheckBox>
                    <CheckBox fx:id="c4" onMouseClicked="#onChickAbleDisable" text="Inter College ?">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </CheckBox>
                    <CheckBox fx:id="c5" onMouseClicked="#onChickAbleDisable" text="Hospital ?">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </CheckBox>
                    <CheckBox fx:id="c6" text="Anganwadi Worker's ?">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </CheckBox>
                    <CheckBox fx:id="c7" text="Availability Of Water Supply ?">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </CheckBox>
                    <CheckBox fx:id="c8" text="Availability Of Food Supply ?">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </CheckBox>
                    <CheckBox fx:id="c9" text="Is This Village Safe For Women And Child ?">
                        <font>
                            <Font name="Gabriola" size="25.0" />
                        </font>
                    </CheckBox>
                    <Button fx:id="save" onAction="#handleAddResources" onMouseEntered="#enterSubmit" onMouseExited="#exitsubmit" style="-fx-background-color:#4b7cb4" text="Save Resources" textFill="BLACK">
                        <font>
                            <Font name="Georgia Bold Italic" size="20.0" />
                        </font>
                    </Button>
                    <Label text="         " />
                </VBox>
                <VBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <TextField fx:id="post" alignment="CENTER" prefHeight="37.0" prefWidth="405.0" promptText="enter_post_name">
                        <font>
                            <Font name="Georgia Bold Italic" size="15.0" />
                        </font>
                  <VBox.margin>
                     <Insets top="40.0" />
                  </VBox.margin>
                    </TextField>
                    <TextField fx:id="village" alignment="CENTER" prefHeight="37.0" prefWidth="405.0" promptText="enter_village_name">
                        <font>
                            <Font name="Georgia Bold Italic" size="15.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="ps" alignment="CENTER" prefHeight="37.0" prefWidth="405.0" promptText="enter_nearest_police_station_name">
                        <font>
                            <Font name="Georgia Bold Italic" size="15.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="psno" alignment="CENTER" prefHeight="37.0" prefWidth="405.0" promptText="enter_nearest_police_contact_no  10-digits">
                        <font>
                            <Font name="Georgia Bold Italic" size="15.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="womens" alignment="CENTER" prefHeight="37.0" prefWidth="405.0" promptText="enter_womwn's_helpline_no">
                        <font>
                            <Font name="Georgia Bold Italic" size="15.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="playschool" alignment="CENTER" prefHeight="37.0" prefWidth="405.0" promptText="enter_play_school_name">
                        <font>
                            <Font name="Georgia Bold Italic" size="15.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="primaryschool" alignment="CENTER" prefHeight="37.0" prefWidth="405.0" promptText="enter_primary_school_name">
                        <font>
                            <Font name="Georgia Bold Italic" size="15.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="highschool"  alignment="CENTER" prefHeight="37.0" prefWidth="405.0" promptText="enter_high_school_name">
                        <font>
                            <Font name="Georgia Bold Italic" size="15.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="interscollege" alignment="CENTER" prefHeight="37.0" prefWidth="405.0" promptText="enter_inter_college_name">
                        <font>
                            <Font name="Georgia Bold Italic" size="15.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="hospital" alignment="CENTER" prefHeight="37.0" prefWidth="404.0" promptText="enter_hospital_name">
                        <font>
                            <Font name="Georgia Bold Italic" size="15.0" />
                        </font>
                    </TextField>
                </VBox>
            </GridPane>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </ListView>
    </content>
</DialogPane>
